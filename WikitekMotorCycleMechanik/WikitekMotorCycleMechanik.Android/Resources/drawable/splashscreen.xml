<?xml version="1.0" encoding="utf-8" ?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/splash_background" />
      <padding
        android:left="0dip"
        android:top="0dip"
        android:right="0dip"
        android:bottom="0dip"/>
    </shape>
  </item>
  <item
    android:drawable="@drawable/ic_logo"
    android:top="85dp"
    android:gravity="center_horizontal"
    android:height="250dp"
    android:width="250dp">
  </item>
  <item
    android:drawable="@drawable/ic_wiki"
    android:bottom="150dp"
    android:gravity="bottom | center_horizontal"
    android:height="40dp"
    android:width="250dp">
  </item>
  <item
    android:bottom="10dp"
    android:drawable="@drawable/ic_powered_by"
    android:gravity="bottom | center_horizontal"
    android:height="35dp"
    android:width="90dp">
  </item>
</layer-list>
