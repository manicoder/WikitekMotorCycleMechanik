    <ContentPage.Content>
        <Grid RowSpacing="10" Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" RowSpacing="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="35*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" 
                      Text="{Binding title}" 
                       Style="{StaticResource lbl}" 
                       TextColor="{StaticResource page_bg_color}"
                           FontAttributes="Bold"
                       FontSize="35"
                       HorizontalTextAlignment="Center"/>
                <Label Grid.Row="1" 
                      Text="{Binding description}" 
                       Style="{StaticResource lbl}" 
                       TextColor="{StaticResource page_bg_color}"
                       HorizontalTextAlignment="Center"/>
                <Grid Grid.Row="2" VerticalOptions="Center" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" 
                           Text="Enter 6 digit OTP" 
                           Style="{StaticResource lbl}" 
                           TextColor="{StaticResource page_bg_color}"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                    <Frame Grid.Row="1" Style="{StaticResource frame}" 
                           VerticalOptions="Center" 
                           HorizontalOptions="Center"
                           HeightRequest="65" 
                           WidthRequest="200"
                           BorderColor="#FFF">
                        <local:CustomEntry x:Name="txt_new_pass" 
                                           Text="{Binding OTP}" 
                                           HorizontalTextAlignment="Center"
                                           Keyboard="Telephone"
                                           FontSize="30"
                                           TextColor="#FFF"
                                           CharacterSpacing="5"
                                           FontAttributes="Bold"
                                           MaxLength="6"
                                           Style="{StaticResource ent}"/>
                    </Frame>
                </Grid>
