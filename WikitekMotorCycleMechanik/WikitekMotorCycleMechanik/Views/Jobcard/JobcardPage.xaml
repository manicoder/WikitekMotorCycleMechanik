                            </Frame>-->
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ImageButton HeightRequest="55" 
                         WidthRequest="55"
                         VerticalOptions="End"
                         HorizontalOptions="End"
                         CornerRadius="27"
                         BackgroundColor="{StaticResource theme_color}"
                         Margin="0,0,10,10"
                         Command="{Binding CreateJobcardCommand}">
                <ImageButton.Source>
                    <FontImageSource FontFamily="{DynamicResource Material}" 
                                                         Glyph="&#xF0415;" 
                                                         Color="#fff"/>
                </ImageButton.Source>
            </ImageButton>
        </Grid>
    </ContentPage.Content>
