                <Frame CornerRadius="33" Padding="-3" HasShadow="True" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <ImageButton BackgroundColor="White" Command="{Binding AddNewVehicleServiceCommand}">
