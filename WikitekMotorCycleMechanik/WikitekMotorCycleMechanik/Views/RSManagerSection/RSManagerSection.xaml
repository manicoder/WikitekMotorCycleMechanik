<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="WikitekMotorCycleMechanik.Views.RSManagerSection.RSManagerSection">
    <ContentPage.Content>
        <Grid Padding="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <maps:Map  Grid.Row="0" x:Name="map"/>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblCustomerName" Grid.Row="0" Grid.Column="0"></Label>
                <Label x:Name="lblMobileNo" Grid.Row="1" Grid.Column="0"></Label>

                <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="1">
                    <StackLayout>
                        <Frame 
                                            CornerRadius="25"
                                            Padding="10"
                                            HeightRequest="70"
                                            WidthRequest="70"
                                            BackgroundColor="{Binding ADPColor}">

                            <Image
                                                Source="ic_CARWIFI_BLUE.png"
                                                HeightRequest="60"
                                                WidthRequest="60"/>
                        </Frame>
                    </StackLayout>
                    <!--<Grid.GestureRecognizers>
                        <TapGestureRecognizer 
                                                         />
                    </Grid.GestureRecognizers>-->
                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>