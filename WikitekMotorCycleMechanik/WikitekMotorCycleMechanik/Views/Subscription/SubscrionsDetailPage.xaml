                                        <Label Grid.Row="0"
                                               Grid.Column="0"
                                               Text="{Binding diy_subs.package_name}"
                                               Style="{StaticResource lbl}"
                                               TextColor="#FFF"/>
                                        <Label Grid.Row="0"
                                               Grid.Column="1"
                                               Text="{Binding diy_subs.country}"
                                               Style="{StaticResource lbl}"
                                               TextColor="#FFF"/>
