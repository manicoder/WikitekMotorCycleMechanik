                                                    <Image Source="{Binding attachment.attachment}"
                                               Aspect="AspectFit"
                                               HeightRequest="200"
                                               VerticalOptions="StartAndExpand"/>
                                                </StackLayout>
                                            </Frame>
                                        </StackLayout>
                                    </DataTemplate>
                                </CarouselView.ItemTemplate>
                            </CarouselView>

