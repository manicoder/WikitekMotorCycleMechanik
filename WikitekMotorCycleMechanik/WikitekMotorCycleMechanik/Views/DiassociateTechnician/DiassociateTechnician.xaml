<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:WikitekMotorCycleMechanik.CustomControls"
             x:Class="WikitekMotorCycleMechanik.Views.DiassociateTechnician.DiassociateTechnician"
             Title="Diassociate Technician">
    <ContentPage.Content>
        <Grid Padding="30,30,30,30" RowSpacing="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Padding="10,20,0,0" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackLayout Orientation="Horizontal" Grid.Row="0">
                    <Label Text="User ID:"/>
                    <Label Grid.Row="0" Text="{Binding CurrentSelectedTechnician.id}"></Label>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Grid.Row="1">
                    <Label Text="User Name :"/>
                    <Label Grid.Row="1" Text="{Binding CurrentSelectedTechnician.first_name}"></Label>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Grid.Row="2">
                    <Label Text="User Type :"/>
                    <Label Grid.Row="2" Text="{Binding CurrentSelectedTechnician.user_type}"></Label>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Grid.Row="3">
                    <Label Text="Status :"/>
                    <Label Grid.Row="3" Text="{Binding CurrentSelectedTechnician.status}"></Label>
                </StackLayout>
            </Grid>
            <Frame Grid.Row="1" Style="{StaticResource frame}">
                <StackLayout VerticalOptions="FillAndExpand" Orientation="Horizontal">
                    <Picker Title="--Select--" ItemsSource="{Binding Technicians}" HeightRequest="60"  HorizontalOptions="FillAndExpand"
                            ItemDisplayBinding="{Binding email}" SelectedItem="{Binding CurrentSelectedTechnician}" />
                </StackLayout>
            </Frame>
            <Button Grid.Row="2" Text="Get OTP" Style="{StaticResource btn}"  Command="{Binding GetOtpCommand}" Clicked="Button_Clicked" />
            <StackLayout x:Name="otpPanel" IsVisible="{Binding OTPOpenPanel}" Grid.Row="3"  >
                <Grid Padding="40,40,40,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Frame Grid.Row="0" Grid.Column="0" Style="{StaticResource frame}">
                        <StackLayout VerticalOptions="FillAndExpand" Orientation="Horizontal">
                            <local:CustomEntry x:Name="otp1" Text="{Binding otp1}"
                                           MaxLength="1" Style="{StaticResource ent}" Keyboard="Numeric" TextChanged="otp1_TextChanged"/>
                        </StackLayout>
                    </Frame>
                    <Frame Grid.Row="0" Grid.Column="1" Style="{StaticResource frame}">
                        <StackLayout VerticalOptions="FillAndExpand" Orientation="Horizontal">
                            <local:CustomEntry x:Name="otp2" Text="{Binding otp2}" 
                                           MaxLength="1" Style="{StaticResource ent}" Keyboard="Numeric" TextChanged="otp2_TextChanged"/>
                        </StackLayout>
                    </Frame>
                    <Frame Grid.Row="0" Grid.Column="2" Style="{StaticResource frame}">
                        <StackLayout VerticalOptions="FillAndExpand" Orientation="Horizontal">
                            <local:CustomEntry x:Name="otp3" Text="{Binding otp3}" 
                                           MaxLength="1" Style="{StaticResource ent}" Keyboard="Numeric" TextChanged="otp3_TextChanged"/>
                        </StackLayout>
                    </Frame>
                    <Frame Grid.Row="0" Grid.Column="3" Style="{StaticResource frame}">
                        <StackLayout VerticalOptions="FillAndExpand" Orientation="Horizontal">
                            <local:CustomEntry x:Name="otp4" Text="{Binding otp4}" 
                                           MaxLength="1" Style="{StaticResource ent}" Keyboard="Numeric"/>
                        </StackLayout>
                    </Frame>
                </Grid>
                <Button Grid.Row="4" Text="Send OTP" Style="{StaticResource btn}"  Command="{Binding SendOTPCommand}"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>