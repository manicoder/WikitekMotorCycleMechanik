                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" BackgroundColor="{StaticResource theme_color}">
                            <Label Text="Select a model year" Style="{StaticResource lbl}"
                               FontAttributes="Bold" FontSize="16" TextColor="#FFF"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="1" Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>
                            <CollectionView ItemsSource="{Binding model_year_list,Mode=TwoWay}" 
                                        SelectionMode="Single"
                                            HeightRequest="180">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Frame HasShadow="True" Margin="1" Padding="5">
                                                <Grid RowSpacing="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox Color="{StaticResource theme_color}" IsChecked="{Binding selected_sub_model}"/>
                                                    <Label Grid.Column="1" Text="{Binding model_year}" Style="{StaticResource lbl}"/>
                                                </Grid>
                                            </Frame>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <Grid Grid.Row="1" ColumnSpacing="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Text="OK" Style="{StaticResource btn}" CornerRadius="2" 
                            Command="{Binding SelectModelYearCommand}"/>
                                <Button Grid.Column="1" Text="Cancel" Style="{StaticResource btn}" CornerRadius="2"
                            Command="{Binding CancelCommand}"/>
                            </Grid>
                        </Grid>

                    </Grid>
                </Frame>

            </Grid>

            <Grid x:Name="submit_view"
                  VerticalOptions="FillAndExpand" 
                  HorizontalOptions="FillAndExpand"
                  IsVisible="{Binding submitbutton_view_visible}">

                <BoxView BackgroundColor="#fff" Opacity=".7"/>
                <Frame BackgroundColor="#fff" 
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   WidthRequest="250"
                   Padding="0"
                   HasShadow="True"
                   BorderColor="#f1f1f1"
                   IsClippedToBounds="True"
                   CornerRadius="5">
                    <Grid BackgroundColor="#fff" 
                      RowSpacing="0"
                      VerticalOptions="CenterAndExpand" 
                      HorizontalOptions="CenterAndExpand"
                      WidthRequest="250">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" BackgroundColor="{StaticResource theme_color}">
                            <Label Text="Selected vehicle" 
                               Style="{StaticResource lbl}"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               FontAttributes="Bold" FontSize="16" TextColor="#FFF"/>
                        </Grid>
                        <Grid Grid.Row="1" RowSpacing="5" Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="150"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="45"/>
                            </Grid.RowDefinitions>

                            <ffimageloading:CachedImage Grid.Row="0"
                                                        Aspect="Fill"
                                           DownsampleToViewSize="True"
			                               Source = "{Binding selected_model_year.attachment.attachment}">

                            </ffimageloading:CachedImage>

                            <!--<Image Grid.Row="0"
                               Aspect="Fill"
                               Source="{Binding selected_submodel.attachment.attachment,Converter={StaticResource ByteToImage}}" />-->

                            <Label Grid.Row="1" 
                               Style="{StaticResource lbl}"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center"
                               FontAttributes="Bold"
                               Margin="10">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding selected_oem.name}"/>
                                        <Span Text="{Binding selected_model.name,StringFormat='-{0}'}"/>
                                        <Span Text="{Binding selected_model_year.name,StringFormat='-{0}'}"/>
                                        <Span Text="{Binding selected_model_year.model_year,StringFormat='-{0}'}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Grid Grid.Row="2" ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0"
                                    Text="OK" 
                                    Style="{StaticResource btn}" 
                                    CornerRadius="2" 
                                    Command="{Binding SubmitCommand}"/>
                                <Button Grid.Column="1" 
                                    Text="Cancel" 
                                    Style="{StaticResource btn}" 
                                    CornerRadius="2"
                                    Command="{Binding CancelCommand}"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Frame>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>